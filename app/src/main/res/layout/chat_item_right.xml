<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/propertyinterest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="02dp"
        android:visibility="gone"
        app:cardCornerRadius="15dip"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/propimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/propertypricetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/propimage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Price" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/relLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone" />

        <androidx.cardview.widget.CardView
            android:id="@+id/lyt_thread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="02dp"
            android:gravity="center_vertical|center_horizontal"
            android:visibility="gone"
            app:cardCornerRadius="15dip"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:paddingBottom="3dp">

                <TextView
                    android:id="@+id/senderNamee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/show_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="this message was deleted"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#ffffff" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/txt_seen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_action_send" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/lyt_thread1"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="3dp"
            android:visibility="gone"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/show_Image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusedByDefault="false"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar" />

                <ImageView
                    android:id="@+id/txt_seen1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="2dp"
                    app:srcCompat="@drawable/ic_action_send" />

                <TextView
                    android:id="@+id/text_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toLeftOf="@+id/txt_seen1" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/v_cardView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="3dp"
            android:visibility="gone"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/show_video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar" />

                <ProgressBar
                    android:id="@+id/vidLoad"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="20dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_play_arrow_black_24dp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/ic_play_circle_filled_black_24dp" />

                <ImageView
                    android:id="@+id/v_seen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="2dp"
                    app:srcCompat="@drawable/ic_action_send" />

                <TextView
                    android:id="@+id/v_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toLeftOf="@+id/v_seen" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/voic_card"
            android:layout_width="300dp"
            android:layout_height="62dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            app:cardCornerRadius="15dip"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/checking"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:id="@+id/vCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corner1">


                <ImageButton
                    android:id="@+id/play"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/rounded_corner1"
                    android:textSize="20dp"
                    app:srcCompat="@drawable/ic_play_arrow_black_24dp" />

                <ProgressBar
                    android:id="@+id/vLoad"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/rounded_corner1"
                    android:indeterminateTint="@android:color/white"
                    android:textSize="20dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_play_arrow_black_24dp" />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10.5dp"
                    android:layout_toLeftOf="@+id/duration"
                    android:progressBackgroundTint="@color/white"
                    android:progressTint="@color/white"
                    android:thumbTint="@color/white" />

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/vo_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/vo_seen"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/vo_seen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="8dp"
                    app:srcCompat="@drawable/ic_action_send" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Map_link_card"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginRight="6dp"
            android:visibility="gone"
            app:cardCornerRadius="15dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corner1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Map_icon"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:focusedByDefault="false" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Map_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/show_Image"
                    android:layout_marginTop="100dp"
                    android:layout_toLeftOf="@+id/txt_seen1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="#FFFFFF"
                    tools:ignore="NotSibling" />

                <TextView
                    android:id="@+id/text_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/show_Image"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/txt_seen2"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    tools:ignore="NotSibling" />

                <ImageView
                    android:id="@+id/txt_seen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/show_Image"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    app:srcCompat="@drawable/ic_action_send"
                    tools:ignore="NotSibling" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/property_card"
            android:layout_width="250dp"
            android:layout_height="320dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginRight="6dp"
            android:visibility="gone"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/prop_image"
                    android:layout_width="250dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/placeholder" />

                <TextView
                    android:id="@+id/pro_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/prop_image"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/pro_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pro_price"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="3dp">

                    <TextView
                        android:id="@+id/pro_bedqt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="2" />

                    <TextView
                        android:id="@+id/pro_bathqt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="6" />

                    <TextView
                        android:id="@+id/pro_unitqty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="1800 sq ft" />

                    <TextView
                        android:id="@+id/pro_bed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pro_bedqt"
                        android:layout_alignParentLeft="true"
                        android:text="Bedrooms" />

                    <TextView
                        android:id="@+id/pro_bath"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pro_bathqt"
                        android:layout_centerHorizontal="true"
                        android:text="Bathrooms" />

                    <TextView
                        android:id="@+id/pro_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pro_unitqty"
                        android:layout_alignParentRight="true"
                        android:text="Unit" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/pro_for"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pro_detail"
                    android:layout_marginLeft="5dp"
                    android:text="For Sale" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/order_CardView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        app:cardBackgroundColor="#9C27B0"
        app:cardCornerRadius="15dip"
        app:cardElevation="5dp">

        <RelativeLayout
            android:id="@+id/rl_chat11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:textColor="@android:color/white"
                android:textStyle="bold">

            </TextView>


            <LinearLayout
                android:id="@+id/o_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtn"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ordd_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="Order ID:"
                    android:textColor="@android:color/white"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="54dp"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/white">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/l_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/o_layout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_address_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="Address:"
                    android:textColor="@android:color/white"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="54dp"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/white">

                </TextView>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/l_produc"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l_add"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_total_product_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="Total Product(s):"
                    android:textColor="@android:color/white"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/txt_total_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@android:color/white">

                </TextView>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/l_pric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l_produc"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_price_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="Total Price:"
                    android:textColor="@android:color/white"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/txt_total_Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@android:color/white">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/btLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l_pric"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/new_shape"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="#9C27B0">

                </Button>

                <Button
                    android:id="@+id/btn_orderdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/new_shape"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Order Detail"
                    android:textAllCaps="false"
                    android:textColor="#9C27B0">

                </Button>

                <Button
                    android:id="@+id/btn_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/new_shape"
                    android:text="Accept"
                    android:textAllCaps="false"
                    android:textColor="#9C27B0"
                    android:visibility="gone">

                </Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btLayout"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="04:87 PM 04/43/2020"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/order_seen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_action_send" />
            </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>