<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/horizontal_cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/wis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_margin="16dp"

            android:tint="@android:color/darker_gray"
            app:srcCompat="@drawable/ic_like" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:id="@+id/l_pkr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_image"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="Rs."
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_image"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="1200"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/product_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_image"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="/-"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:background="#D6D6D6"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_above="@+id/product_category"
                android:layout_below="@+id/l_pkr"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:id="@+id/quantityLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_image"
                android:layout_marginBottom="6dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/removeQty"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="8dp"
                    app:fabCustomSize="25dp"
                    app:srcCompat="@drawable/ic_remove_black_24dp" />

                <TextView
                    android:id="@+id/quant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="1"
                    android:textColor="@android:color/black" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/addQty"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="8dp"
                    app:fabCustomSize="25dp"
                    app:srcCompat="@drawable/ic_add_black_24dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/product_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l_pkr"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:maxLines="2"
                android:minLines="2"
                android:text="Pepsi"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/selectedLayout"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:alpha="0.4"
                android:background="@android:color/holo_blue_light"
                android:orientation="horizontal"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/btLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_category"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/minusQty"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_shape"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/proQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:text="1"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/plusQty"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_shape"
                    android:text="+"
                    android:textColor="@color/white" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_add_cart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_shape"

                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Add"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="visible">

            </Button>


            <Button

                android:id="@+id/btn_remove_cart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_shape"

                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Remove"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="gone">

            </Button>

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spin_kit"
                style="@style/SpinKitView.Large.Circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                app:SpinKit_Color="@color/colorAccent" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>