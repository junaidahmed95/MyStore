<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000029"
    android:orientation="horizontal">



        <androidx.cardview.widget.CardView

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp">

            <View
                android:background="@color/dark"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_margin="16dp"
                android:tint="@android:color/darker_gray"
                app:srcCompat="@drawable/ic_like" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="vertical">

                <View
                    android:id="@+id/product_image"
                    android:background="@color/dark"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true" />


                <TextView
                    android:id="@+id/product_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_image"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="1dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/product_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_desc"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="1dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/secondaryTextColor" />



                <RelativeLayout
                    android:id="@+id/priceLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_title"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="4dp">

                    <View
                        android:background="@color/dark"
                        android:layout_width="40dp"
                        android:layout_height="20dp"/>

                </RelativeLayout>

                <View
                    android:id="@+id/btn_add_cart"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/priceLayout"
                    android:background="@color/dark"
                    android:drawableRight="@drawable/addcartwhite"
                    android:drawableTint="@color/white"
                    android:paddingRight="20dp" />

                <Button
                    android:id="@+id/btn_remove_cart"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/priceLayout"
                    android:background="@drawable/button_shape"
                    android:drawableRight="@drawable/ic_action_remcart"
                    android:drawableTint="@color/white"
                    android:paddingRight="20dp"
                    android:text="Remove"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:visibility="gone" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp">

            <View
                android:background="@color/dark"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_margin="16dp"
                android:tint="@android:color/darker_gray"
                app:srcCompat="@drawable/ic_like" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="vertical">

                <View
                    android:id="@+id/product_image0"
                    android:background="@color/dark"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true" />


                <TextView
                    android:id="@+id/product_desc0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_image0"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="1dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/product_title0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_desc0"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="1dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/secondaryTextColor" />



                <RelativeLayout
                    android:id="@+id/priceLayout0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_title0"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="4dp">

                    <View
                        android:background="@color/dark"
                        android:layout_width="40dp"
                        android:layout_height="20dp"/>

                </RelativeLayout>

                <View
                    android:id="@+id/btn_add_cart0"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/priceLayout0"
                    android:background="@color/dark"
                    android:drawableRight="@drawable/addcartwhite"
                    android:drawableTint="@color/white"
                    android:paddingRight="20dp" />

                <Button
                    android:id="@+id/btn_remove_cart0"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/priceLayout0"
                    android:background="@drawable/button_shape"
                    android:drawableRight="@drawable/ic_action_remcart"
                    android:drawableTint="@color/white"
                    android:paddingRight="20dp"
                    android:text="Remove"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:visibility="gone" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>









</LinearLayout>

